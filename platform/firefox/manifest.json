{
  "manifest_version": 2,
  "name": "__MSG_title__",
  "version": "1.4.1",
  "description": "__MSG_description__",
  "icons": {
    "128": "img/ext-icon.png"
  },
  "default_locale": "en",
  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "19": "img/browser-action-off.png"
    },
    "default_popup": "app.html",
    "default_title": "__MSG_title__"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/getPageMetadata.js"
      ]
    }
  ],
  "content_security_policy": "object-src 'self'; script-src 'self' 'unsafe-eval';",
  "permissions": [
    "alarms",
    "bookmarks",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ]
}